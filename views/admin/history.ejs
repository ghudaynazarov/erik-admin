<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="app"></div>
    <div class="admin-container">
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
          <ul>
            <li><a href="/admin-product" data-section="dashboard">Admin</a></li>
            <li><a href="/add-product" data-section="users">Add Product</a></li>
            <li><a href="/admin/reserv" data-section="users">Reservation</a></li>
            <li><a href="orders.html" data-section="products">Orders</a></li>
            <li><a href="message.html" data-section="products">Message</a></li>  
          </ul>
        </nav>
      </aside>
      <main class="main-content">
        <%- include('../include/header.ejs') %> 
        <div id="content" class="content">
          <div id="dashboard" class="section active">
            <h2>Dashboard</h2>
            <div class="stats-grid">
              <div class="stat-card">
                <h3>Total Users</h3>
                <p>1,234</p>
              </div>
              <div class="stat-card">
                <h3>Revenue</h3>
                <p>$45,678</p>
              </div>
              <div class="stat-card">
                <h3>Orders</h3>
                <p>892</p>
              </div>
              <div class="stat-card">
                <h3>Products</h3>
                <p>156</p>
              </div>
            </div>
          </div>
          <div id="users" class="section">
            <h2>Users</h2>
            <table class="data-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>1</td>
                  <td>John Doe</td>
                  <td>john@example.com</td>
                  <td>Admin</td>
                </tr>
                <tr>
                  <td>2</td>
                  <td>Jane Smith</td>
                  <td>jane@example.com</td>
                  <td>User</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div id="products" class="section">
            <h2>Products</h2>
            <table class="data-table">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Price</th>
                  <th>Stock</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>1</td>
                  <td>Product A</td>
                  <td>$99.99</td>
                  <td>50</td>
                </tr>
                <tr>
                  <td>2</td>
                  <td>Product B</td>
                  <td>$149.99</td>
                  <td>30</td>
                </tr>
              </tbody>
            </table>
          </div>
          <div id="settings" class="section">
            <h2>Settings</h2>
            <form class="settings-form">
              <div class="form-group">
                <label>Site Name</label>
                <input type="text" value="Admin Dashboard">
              </div>
              <div class="form-group">
                <label>Email Notifications</label>
                <input type="checkbox" checked>
              </div>
              <button type="submit">Save Settings</button>
            </form>
          </div>
        </div>
      </main>
    </div>
    <script type="module" src="/js/admin.js"></script>
    <script src="/js/counter.js"></script>
  </body>
</html>
