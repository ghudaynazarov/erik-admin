<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="app"></div>
    <div class="admin-container">
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
          <ul>
            <li><a href="/admin/admin-product" data-section="dashboard">Admin</a></li>
            <li><a href="/admin/add-product" data-section="users" class="active">Add Product</a></li>
            <li><a href="/admin/reserv" data-section="users">Reservation</a></li>
            <li><a href="/admin/book" data-section="products">Book</a></li>
            <li><a href="/admin/review" data-section="products">Review</a></li> 
          </ul>
        </nav>
      </aside>             
      <main class="main-content">
      <%- include('../include/header.ejs') %> 
        <div id="content" class="content">
          <div id="dashboard" class="section">
            <h2>Add Product</h2>
          </div>
          <div id="settings" class="section active">
            <h2>Add Room</h2>
            <form class="settings-form" action="/admin/<% if(editing) {%>edit-room<% }else{ %>add-room<% } %>" method="POST" enctype="multipart/form-data">
                <button><a href="/admin/add-product">Add Product</a></button>

                <select id="lang" name="lang">
                  <% if(editing){ %>
                    <option value="<%= product.lang %>">
                        <%= product.lang %>
                    </option>
                    <% } %>
                  <option value="en">English</option>
                  <option value="ru">Russian</option>
                </select>

              <div class="form-group" id="title">
                <label>Name</label>
                <input type="text" name="title" value="<% if(editing) { %><%= product.title %><% } %>" id="title" placeholder="Enter name">
              </div>

              <div class="form-group" id="description">
                <label>Description</label>
                <input type="text" name="description" value="<% if(editing) { %><%= product.description %><% } %>" id="description" placeholder="Enter Description">
              </div>

              <div class="form-group" id="image">
                <label>Image</label>
                <% if(editing) {%>
                  <input type="text" name="image" id="image" value="<%= product.image %>">
                <% }else{ %>
                <input type="file" name="image" id="image" placeholder="Enter Image">
                <% } %>
              </div>

              <div class="form-group" id="bedNum">
                <label>Bed number</label>
                <input type="number" name="bedNum" value="<% if(editing) { %><%= product.bedNum %><% } %>" id="bedNum" placeholder="Enter Bed Number">
              </div>

              <div class="form-group" id="guestNum">
                <label>Guest number</label>
                <input type="number" name="guestNum" value="<% if(editing) { %><%= product.guestNum %><% } %>" id="guestNum" placeholder="Enter guestNum">
              </div>

              <div class="form-group" id="price">
                <label>Price</label>
                <input type="number" name="price" value="<% if(editing) { %><%= product.price %><% } %>" id="price" placeholder="Enter Price">
              </div>
              <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
                <% } %>
              <button type="submit">
                <% if (editing) { %>Update Room<% } else { %>Add Room<% } %>
              </button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
