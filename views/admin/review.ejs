<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="app"></div>
    <div class="admin-container">
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
          <ul>
            <li><a href="/admin/admin-product" data-section="dashboard">Admin</a></li>
            <li><a href="/add-product" data-section="users">Add Product</a></li>
            <li><a href="/admin/reserv" data-section="users">Reservation</a></li>
            <li><a href="/admin/book" data-section="products">Book</a></li>
            <li><a href="/admin/review" data-section="products" class="active">Review</a></li>
          </ul>
        </nav>
      </aside>
      <main class="main-content">
        <%- include('../include/header.ejs') %> 
        <div id="content" class="content">
          <div id="dashboard" class="section active">
            <h2>Messages</h2>
            <div class="stats-grid">
              <% for(let product of prods) { %>
              <div class="stat-card">
                <h4>Name</h4>
                <p><%= product.name %></p>

                <h4>Review</h4>
                <p><%= product.message %></p>

                <form action="/admin/delete-review" method="POST">
                  <input type="hidden" value="<%= product.id %>" name="productId">
                  <button class="btn" style="background-color: rgb(156, 12, 12); position: absolute; bottom: 16px;">remove</button>
                  </form>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </main>
    </div>
    <script type="module" src="/js/counter.js"></script>
    <script src="/js/admin.js"></script>
  </body>
</html>
