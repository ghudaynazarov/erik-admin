<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="app"></div>
    <div class="admin-container">
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
          <ul>
            <li><a href="/admin/admin-product" data-section="dashboard">Admin</a></li>
            <li><a href="/admin/add-product" data-section="users" class="active">Add Product</a></li>
            <li><a href="/admin/reserv" data-section="users">Reservation</a></li>
            <li><a href="/admin/book" data-section="products">Book</a></li>
            <li><a href="/admin/review" data-section="products">Review</a></li> 
          </ul>
        </nav>
      </aside>
      <main class="main-content">
    <%- include('../include/header.ejs') %>
        <div id="content" class="content">
          <div id="settings" class="section active">
            <h2>Add Address</h2>
            <form class="settings-form"  action="/admin/<% if(editing) {%>edit-address<% }else{ %>add-address<% } %>" method="POST" enctype="multipart/form-data">
                <button><a href="/admin/add-product">Add Product</a></button>

                <select id="lang" name="lang">
                
                  <option value="en">English</option>
                  <option value="ru">Russian</option>
                </select>

              <div class="form-group" id="address">
                <label>Address</label>
                <input type="text" name="address" value="<% if(editing) { %><%= product.address %><% } %>" id="address" placeholder="Enter address">
              </div>

              <div class="form-group" id="phone_number">
                <label>Phone number</label>
                <input type="text" name="phone_number" value="<% if(editing) { %><%= product.phone_number %><% } %>" id="phone_number" placeholder="Enter phone_number">
              </div>

              <div class="form-group" id="email">
                <label>Email</label>
                <input type="text" name="email" value="<% if(editing) { %><%= product.email %><% } %>" id="email" placeholder="Enter email">
              </div>

              <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
              <% } %>

              <button type="submit">
                <% if (editing) { %>Update Product<% } else { %>Add Address<% } %>
              </button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
