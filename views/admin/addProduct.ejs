<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div id="app"></div>
    <div class="admin-container">
      <aside class="sidebar">
        <div class="sidebar-header">
          <h2>Admin Panel</h2>
        </div>
        <nav class="sidebar-nav">
          <ul>
            <li><a href="/admin/admin-product" data-section="dashboard">Admin</a></li>
            <li><a href="/admin/add-product" data-section="users" class="active">Add Product</a></li>
            <li><a href="/admin/reserv" data-section="users">Reservation</a></li>
            <li><a href="/admin/book" data-section="products">Books</a></li>
            <li><a href="/admin/review" data-section="products">Reviews</a></li>
          </ul>
        </nav>
      </aside>
      <main class="main-content">
    <%- include('../include/header.ejs') %>
        <div id="content" class="content">
          <div id="dashboard" class="section">
            <h2>Add Product</h2>
          </div>
          <div id="settings" class="section active">
            <h2>Add Product</h2>
            <form class="settings-form" action="/admin/<% if(editing) {%>edit-product<% }else{ %>add-product<% } %>" method="POST" enctype="multipart/form-data">
              <select id="option" name="option">
                <% if(editing){ %>
                  <option value="<%= product.option %>">
                      <%= product.option %>
                  </option>
                  <% } %>
                <option value="Main Properties">Main Properties</option>
                <option value="Gallery">Gallery</option>
                <option value="History of Dashoguz">History of Dashoguz</option>
                <option value="Comment">Comment</option>
                <option value="Museum">Museum</option>
              </select>
              <select id="lang" name="lang">
                
                <option value="en">English</option>
                <option value="ru">Russian</option>
              </select>
              <button><a href="/admin/add-room">Room</a></button>
              <button><a href="/admin/add-address">Address</a></button>

              <div class="form-group" id="title">
                <label>Name</label>
                <input type="text" value="<% if(editing) { %><%= product.title %><% } %>" id="title" name="title" placeholder="Enter website name">
              </div>

              <div class="form-group" id="description">
                <label>Description</label>
                <input type="text" value="<% if(editing) { %><%= product.description %><% } %>" id="description" name="description" placeholder="Enter Description">
              </div>

              <div class="form-group" id="image">
                <label>Image</label>
                <% if(editing) {%>
                  <input type="text" name="image" id="image" value="<%= product.image %>">
                <% }else{ %>
                <input type="file" name="image" id="image" placeholder="Enter Image">
                <% } %>
              </div>
              <% if (editing) { %>
                <input type="hidden" value="<%= product.id %>" name="productId">
                <% } %>
              <button type="submit">
                <% if (editing) { %>Update Product<% } else { %>Add Product<% } %>
              </button>
            </form>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
